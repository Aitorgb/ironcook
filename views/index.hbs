<div class="container login mt-5">
    <div class="text-center">
        {{#if message}}
        <div class="alert alert-primary" role="alert">
        {{message}}
        </div>
        {{/if}}
        {{#if error.validation}}
        <div class="alert alert-danger" role="alert">
        {{error.validation.message}}
        </div>
        {{/if}}
        <form action="/login" method="POST">
        <div class="form-group">
            <input name="email" type="text" class="form-control {{#if error.email }}is-invalid{{/if}}" id="email"
            placeholder="Enter email" value="{{ user.email }}">
            {{#if error.email}}
            <div class="invalid-feedback">
            {{error.email.message}}
            </div>
            {{/if}}
        </div>

        <div class="form-group">
            <input name="password" type="password" class="form-control {{#if error.password }}is-invalid{{/if}}" id="password"
            placeholder="Enter password" value="{{ user.password }}">

            {{#if error.password}}
            <div class="invalid-feedback">
            {{error.password.message}}
            </div>
            {{/if}}
        </div>

            <button type="submit" class="btn btn-primary mt-2 w-100">Login</button><br>
            <a href="/auth/google/callback" class="btn btn-light mt-2 w-100 mb-2"><i class="fa fa-google"></i> Login with Google</a>

        <p>Don't have an account? <a href="/signup">Register</a></p>
        </form>
    </div>
</div>